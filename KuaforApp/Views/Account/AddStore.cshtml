@model KuaforApp.Contexts.StoreModel
@{
    ViewData["Title"] = "AddStore";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/vendor/bootstrap-fileinput/css/fileinput.min.css" rel="stylesheet" />
<style>
    .form-group {
        background: white;
        border: 1px gray solid;
        border-radius: .25rem;
    }

    .register {
        position: absolute;
        padding-top: 12.5%;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        margin: auto auto auto auto;
    }

    .validateCss {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
        border-radius: .25rem;
    }

        .validateCss ul {
            columns: 2;
            -webkit-columns: 2;
            -moz-columns: 2;
            list-style: none
        }

            .validateCss ul li {
            }

                .validateCss ul li::before {
                    content: "\f06a";
                    font-family: 'Font Awesome\ 5 Free';
                    font-weight: 900;
                    display: inline-block;
                    margin-left: -1.3em; /* same as padding-left set on li */
                    width: 1.3em;
                }
                .footer{
                    bottom:-200px !important
                }



    input[type="file"] {
        display: none;
    }

    .custom-file-upload {
        border: 1px solid #ccc;
        display: inline-block;
        padding: 6px 12px;
        cursor: pointer;
    }
</style>

<form asp-controller="Account" asp-action="AddStore" enctype="multipart/form-data" method="post">
    <div class="container">

        <div class="row">
            <div class="col-md-12">



                <div class="register">




                    <div class="form-group">
                        <div class="validateCss" asp-validation-summary="All">


                        </div>

                        <div class="p-2">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Dükkan Adı</label>
                                    @Html.TextBoxFor(i => i.Name, new { @class = "form-control" })


                                    <label>Telefon Numarası</label>
                                    @Html.TextBoxFor(i => i.PhoneNumber, new { @class = "form-control", type = "tel", placeholder = "0555 555 5555", pattern = "[0-9]{4} [0-9]{3} [0-9]{4}", maxLength = "13" })



                                    <label>Kuaför Tipi</label>
                                    @Html.TextBoxFor(i => i.Type, new { @class = "form-control" })
                                    <label>Profil Fotoğrafı</label>
                                    <div>
                                        <input id="input-b4" name="fileProfile" type="file" class="file"
                                               data-show-upload="false" data-show-caption="true" data-msg-placeholder="Lütfen resim dosyası seçiniz.">
                                    </div>
                                    <p class="text-danger">Seçtiğiniz fotoğraf anasayfada müşterilere gösterilecek ilk fotoğraf olacaktır.</p>









                                </div>
                                <div class="col-md-6">

                                    <label class="mt-1">Açıklama</label>
                                    @Html.TextBoxFor(i => i.Description, new { @class = "form-control" })
                                    <label class="mt-1">Adres</label>
                                    @Html.TextBoxFor(i => i.Address, new { @class = "form-control" })
                                    <label class="mt-1">Şehir</label>
                                    @Html.TextBoxFor(i => i.City, new { @class = "form-control" })
                                    <label class="mt-1">Semt</label>
                                    @Html.TextBoxFor(i => i.District, new { @class = "form-control" })



                                </div>







                            </div>
                            <div class="mt-5">
                                <input id="input-b3" name="files" type="file" class="file" multiple
                                       data-show-upload="false" data-show-caption="true" data-msg-placeholder="Lütfen resim dosyası seçiniz.">
                            </div>
                            <button type="submit" id="submit" class="btn btn-primary mt-5">Kayıt Ol</button>









                        </div>





                    </div>
                </div>


            </div>
        </div>

    </div>

</form>

@section Scripts{
    <script src="https://kit.fontawesome.com/55f3df80f5.js" crossorigin="anonymous"></script>

    <script src="~/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/vendor/bootstrap-fileinput/js/fileinput.min.js"></script>
    <script>
        $("#input-b3").fileinput({
            showPreview: true,
            maxFileCount: 10,
            msgInvalidFileExtension: "Lütfen resim dosyası seçiniz.",
            msgFilesTooMany: "Dosya sayısı 10'u geçemez.",
            maxImageHeight: 600,
            maxImageWidth: 500,
            resizePreference: "width",
            resizeImage: true,
            resizeImageQuality: 0.75,
            browseLabel: "Resim Seçiniz",
            elErrorContainer: '#kartik-file-errors',
            allowedFileExtensions: ["jpg", "png"]
            //uploadUrl: '/site/file-upload-single'
        });
        $("#input-b4").fileinput({
            showPreview: false,
            browseLabel: "Resim Seçiniz",
            elErrorContainer: '#kartik-file-errors',
            allowedFileExtensions: ["jpg", "png"],
            //uploadUrl: '/site/file-upload-single'
        });
    </script>



}


