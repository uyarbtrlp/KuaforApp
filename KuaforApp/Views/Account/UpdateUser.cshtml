@model KuaforApp.Contexts.EmployeesUser

@{
    ViewData["Title"] = "UpdateUser";
}



<div class="row text-white">
    <div class="col-md-4">
        <form asp-action="UpdateUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeOfArrival" class="control-label"></label>
                <input asp-for="TimeOfArrival" class="form-control" />
                <span asp-validation-for="TimeOfArrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transactions" class="control-label"></label>
                <input asp-for="Transactions" class="form-control" />
                <span asp-validation-for="Transactions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment" class="control-label"></label>
                <input asp-for="Payment" class="form-control" />
                <span asp-validation-for="Payment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TimeOfArrival" class="control-label"></label>
                <input asp-for="TimeOfArrival" class="form-control" />
                <span asp-validation-for="TimeOfArrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fas fa-save mr-2"></i>Kaydet</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Account/DetailsUser/@Model.EmployeeId" class="btn btn-secondary"><i class="fas fa-arrow-circle-left mr-2"></i>Listeye Geri Dön</a>
</div>

