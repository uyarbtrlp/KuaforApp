@model IEnumerable<KuaforApp.Contexts.Chat>
@{
    ViewData["Title"] = "Default";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .card {
        cursor: pointer
    }

        .card:hover {
            background-color: lightblue
        }

    .chats {
        overflow: auto;
    }
    .title{
        margin-top: 2.3rem!important;
    }
    .chat {
        color: white;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        max-height: 100%;
        height: 750px
    }
    .info{
        margin:auto
    }
    @@media screen and (min-width:768px){
            .media{
                word-break:break-word;
            }
        }
</style>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="chats ">
                @if (Model.Count() == 0)
                {
                    <div class="alert alert-danger">Şu anda herhangi biriyle konuşmanız bulunmamaktadır.</div>
                }
                else
                {
                    @foreach (var item in Model)
                    {
                        <div class="card">
                            <div onclick="window.location='/Chat/ChatMessages/@item.Id'" class="media p-2">

                                <img class="d-flex mr-3 rounded-circle" width="100" height="100" src="/Upload/@item.StoreProfile" alt="">
                                <div class="media-body">
                                    <h5 class="title">@item.StoreUserName</h5>

                                </div>
                            </div>
                        </div>


                    }

                }
            </div>


        </div>
        <input type="hidden" id="clickedMessage" />
        <div class="col-md-8">
            <div class="chat">
                <div class="info">
                    <i class="far fa-envelope-open" style="font-size:75px;margin-left:41%;margin-bottom:10%"></i>
                    <header class="font-weight-bold">Bir konuşma görmek istiyorsanız seçiniz.</header>
                </div>
            </div>

        </div>
    </div>




</div>



@section Scripts {
    <script>

    </script>


}
